<div class="ui container">
  <p id="notice"><%= notice %></p>

  <%= link_to '返回', user_documents_path , class: 'ui button' %>
  <% if belongs_to_current_user?(@document) %>
      <%= link_to '编辑', edit_user_document_path(@document), class: 'ui button' %>
  <% end %>

  <div class="ui horizontal divider">
    公文正文
  </div>
  <h1>
    <%= @document.tite %>
  </h1>

  <p>
    <%= @document.content %>
  </p>
  <div class="ui horizontal divider">
    公文操作
  </div>

  <form class="ui form">
    <h4 class="ui dividing header">提交审核 & 批复</h4>
    <div class="field">
      <label>您当前权限为：<%= UserPermission.key(current_user.permission) %>，可以提交给 <%= permissions_upper_than_user_has(current_user) %> 权限用户</label>
      <label>提交公文至：</label>
      <div class="field">
        <select class="ui search dropdown">
          <% users_by_permission_upper_than_user(current_user).each do |user| %>
              <option value=<%= user.id %>><%= user.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="ui button" tabindex="0">提交</div>
  </form>

</div>