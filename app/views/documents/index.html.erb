<div class="ui container">

  <h1>公文</h1>

  <table>
    <thead>
    <tr>
      <th>Tite</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @documents.each do |document| %>
        <tr>
          <td><%= document.tite %></td>
          <td><%= document.content %></td>
          <td><%= link_to 'Show', user_document_path(:id => document.id) %></td>
          <td><%= link_to 'Edit', edit_user_document_path(:id => document.id) %></td>
          <td><%= link_to 'Destroy', user_document_path(:id => document.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '新建公文', new_user_document_path(:user_id => current_user.id) %>

</div>