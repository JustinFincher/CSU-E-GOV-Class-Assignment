<!DOCTYPE html>
<html>
<head>
  <title>CSUEGovClassAssignment</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <script>
      $(document)
          .ready(function() {

              // fix main menu to page on passing
              $('.main.menu').visibility({
                  type: 'fixed'
              });
              // show dropdown on hover
              $('.main.menu  .ui.dropdown').dropdown({
                  on: 'hover'
              });
          })
      ;
  </script>
</head>

<body>

<div class="ui inverted main menu fixed" style="position: fixed; top: 0px; left: auto; z-index: 10;">
  <div class="ui text container">
    <%= link_to '电子政务系统', '/', class: 'header item' %>
    <!--<a href="#" class="item">Blog</a>-->
    <!--<a href="#" class="item">Articles</a>-->
    <div class="ui right floated dropdown item" tabindex="0">

      <% if logged_in? %>
          <%= link_to  current_user.name, current_user %>
          <i class="dropdown icon"></i>
          <div class="menu" tabindex="-1">
            <div class="item">Link Item</div>
            <div class="item">Link Item</div>
            <div class="divider"></div>
            <div class="header">Header Item</div>
            <div class="item">
              <i class="dropdown icon"></i>
              Sub Menu
              <div class="menu">
                <div class="item">Link Item</div>
                <div class="item">Link Item</div>
              </div>
            </div>
            <div class="item">Link Item</div>
          </div>
      <% else %>
          <%= link_to "Log in", login_path %>
      <% end %>
    </div>
  </div>
</div>
<div class="ui borderless main menu placeholder" style="display: block; visibility: hidden; margin: 0px;">

</div>
<%= yield %>

<div class="ui vertical footer segment">
  <div class="ui center aligned container">
    <%= debug(params) if Rails.env.development? %>
  </div>
</div>
</body>
</html>
